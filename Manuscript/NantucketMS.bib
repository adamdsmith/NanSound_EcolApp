  author = {Hurrell, {James} {W}. and {Deser}, {Clara}},
  urldate = {2014-04-18},
  date = {2010-02-10},
  pages = {231--244},
  keywords = {Climate variability,NAO,Physical oceanographic impacts},
  file = {ScienceDirect Full Text PDF:F\:\\Zotero_library\\storage\\C6K9X9RR\\Hurrell and Deser - 2010 - North Atlantic climate variability The role of th.pdf:application/pdf;ScienceDirect Snapshot:F\:\\Zotero_library\\storage\\C3EHABHE\\S0924796309003224.html:text/html}
