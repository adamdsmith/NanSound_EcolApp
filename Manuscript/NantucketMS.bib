  number = {3},
  journaltitle = {Journal of {Applied} {Ecology}},
  shortjournal = {{J}. {Appl}. {Ecol}.},
  author = {Larsen, {Jesper} {K}. and {Guillemette}, {Magella}},
  urldate = {2015-07-16},
  date = {2007-06-01},
  pages = {516--522},
  langid = {english},
  keywords = {Collision risk,disturbance,flight behaviour,operating wind turbines,Somateria mollissima,Wind farms},
  file = {Full Text PDF:F\:\\Zotero_library\\storage\\R4GF2IPX\\Larsen and Guillemette - 2007 - Effects of wind turbines on flight behaviour of wi.pdf:application/pdf;Snapshot:F\:\\Zotero_library\\storage\\R7K5IM8D\\full.html:text/html}
