  number = {1–2},
  journaltitle = {Ecological {Modelling}},
  shortjournal = {Ecological {Modelling}},
  series = {Special {Issue} on {NEMURO} ({North} {Pacific} {Ecosystem} {Model} for {Understanding} {Regional} {Oceanography}) and {NEMURO}.{FISH} ({NEMURO} for {Including} {Saury} and {Herring}) {Modeling} of {North} {Pacific} {Marine} {Ecosystems} {Special} {Issue} on {NEMURO} and {NEMURO}.{FISH}},
